{
  "$schema": "https://turbo.build/schema.json",
  "globalDependencies": ["**/.env.*local"],
  "pipeline": {
    "build": {
      "dependsOn": ["^build"],
      "outputs": ["dist/**", ".next/**", "build/**"]
    },
    "dev": {
      "cache": false,
      "persistent": true
    },
    "lint": {
      "outputs": []
    },
    "typecheck": {
      "dependsOn": ["^build"],
      "outputs": []
    },
    "test": {
      "outputs": ["coverage/**"],
      "dependsOn": ["^build"]
    },
    "test:unit": {
      "outputs": ["coverage/**"]
    },
    "test:integration": {
      "outputs": ["coverage/**"],
      "dependsOn": ["^build"]
    },
    "test:e2e": {
      "outputs": ["test-results/**", "playwright-report/**"],
      "dependsOn": ["^build"]
    },
    "test:contract": {
      "outputs": ["pact/**"],
      "dependsOn": ["^build"]
    },
    "test:bdd": {
      "outputs": ["reports/**"],
      "dependsOn": ["^build"]
    },
    "test:bdd:all": {
      "outputs": ["reports/**"],
      "dependsOn": ["^build"]
    },
    "test:security": {
      "outputs": []
    },
    "clean": {
      "cache": false
    }
  }
}
