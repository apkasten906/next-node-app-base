{
  "name": "frontend",
  "version": "1.0.0",
  "private": true,
  "description": "Next.js frontend application",
  "scripts": {
    "dev": "next dev",
    "build": "next build",
    "start": "next start",
    "lint": "eslint .",
    "typecheck": "tsc --noEmit",
    "test": "vitest run",
    "test:unit": "vitest run",
    "test:integration": "vitest run",
    "test:e2e": "playwright test",
    "test:e2e:ui": "playwright test --ui",
    "test:e2e:headed": "playwright test --headed",
    "test:e2e:debug": "playwright test --debug",
    "test:e2e:report": "playwright show-report",
    "test:contract": "echo 'Frontend contract tests - Pact to be configured'",
    "test:bdd": "cucumber-js",
    "test:bdd:all": "cucumber-js -p all",
    "test:bdd:wip": "cucumber-js -p wip",
    "test:bdd:manual": "cucumber-js -p manual",
    "test:bdd:watch": "cucumber-js --watch"
  },
  "dependencies": {
    "@next-auth/prisma-adapter": "^1.0.7",
    "@prisma/client": "^7.0.0",
    "@repo/types": "workspace:*",
    "@tanstack/react-query": "^5.90.10",
    "@tanstack/react-query-devtools": "^5.90.2",
    "i18next": "^25.6.3",
    "next": "^15.1.6",
    "next-auth": "^4.24.7",
    "next-i18next": "^15.4.2",
    "react": "^18.3.1",
    "react-dom": "^18.3.1",
    "react-i18next": "^16.3.5",
    "socket.io-client": "^4.8.1"
  },
  "devDependencies": {
    "@cucumber/cucumber": "^12.2.0",
    "@cucumber/pretty-formatter": "^2.4.1",
    "@playwright/test": "^1.56.1",
    "@tailwindcss/postcss": "^4.1.17",
    "@types/node": "^24.10.1",
    "@types/react": "^18.3.18",
    "@types/react-dom": "^18.3.5",
    "@types/supertest": "^6.0.3",
    "autoprefixer": "^10.4.22",
    "eslint-config-next": "^16.0.3",
    "playwright": "^1.56.1",
    "postcss": "^8.5.6",
    "prisma": "^7.0.0",
    "supertest": "^7.1.4",
    "tailwindcss": "^4.1.17",
    "ts-node": "^10.9.2",
    "typescript": "^5.9.3",
    "vitest": "^4.0.12"
  }
}
