{
  "name": "backend",
  "version": "1.0.0",
  "private": true,
  "description": "Node.js backend API with Express and TypeScript",
  "dependencies": {
    "@auth/prisma-adapter": "^2.11.1",
    "@prisma/client": "^7.0.0",
    "@repo/types": "workspace:*",
    "compression": "^1.8.1",
    "cors": "^2.8.5",
    "dotenv": "^17.2.3",
    "express": "^5.1.0",
    "ioredis": "^5.8.2",
    "morgan": "^1.10.1",
    "next-auth": "5.0.0-beta.30",
    "winston": "^3.18.3"
  },
  "scripts": {
    "dev": "node --experimental-strip-types --env-file=.env src/index.ts",
    "build": "echo 'Backend build - TypeScript to be configured'",
    "start": "node --experimental-strip-types --env-file=.env src/index.ts",
    "lint": "echo 'Backend lint - ESLint to be configured'",
    "typecheck": "echo 'Backend typecheck - TypeScript to be configured'",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:ui": "vitest --ui",
    "test:coverage": "vitest run --coverage",
    "test:unit": "vitest run --grep unit",
    "test:integration": "vitest run --grep integration",
    "test:contract": "echo 'Backend contract tests - Pact to be configured'",
    "test:security": "echo 'Backend security tests - OWASP ZAP to be configured'",
    "db:generate": "prisma generate",
    "db:push": "prisma db push",
    "db:migrate": "prisma migrate dev",
    "db:studio": "prisma studio"
  },
  "devDependencies": {
    "@testing-library/jest-dom": "^6.9.1",
    "@types/compression": "^1.8.1",
    "@types/cors": "^2.8.19",
    "@types/express": "^5.0.5",
    "@types/morgan": "^1.9.10",
    "@types/supertest": "^6.0.3",
    "@vitest/ui": "^4.0.12",
    "c8": "^10.1.3",
    "prisma": "^7.0.0",
    "supertest": "^7.1.4",
    "vitest": "^4.0.12"
  }
}
