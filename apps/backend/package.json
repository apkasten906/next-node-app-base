{
  "name": "backend",
  "version": "1.0.0",
  "private": true,
  "description": "Node.js backend API with Express and TypeScript",
  "dependencies": {
    "@auth/prisma-adapter": "^2.11.1",
    "@aws-sdk/client-s3": "^3.937.0",
    "@aws-sdk/s3-request-presigner": "^3.937.0",
    "@azure/storage-blob": "^12.29.1",
    "@google-cloud/storage": "^7.17.3",
    "@prisma/adapter-pg": "^7.0.1",
    "@prisma/client": "^7.0.1",
    "@repo/types": "workspace:*",
    "compression": "^1.8.1",
    "cors": "^2.8.5",
    "dotenv": "^17.2.3",
    "express": "^5.1.0",
    "ioredis": "^5.8.2",
    "morgan": "^1.10.1",
    "multer": "^2.0.2",
    "next-auth": "5.0.0-beta.30",
    "pg": "^8.16.3",
    "swagger-jsdoc": "^6.2.8",
    "swagger-ui-express": "^5.0.1",
    "winston": "^3.18.3"
  },
  "scripts": {
    "dev": "node --experimental-strip-types --env-file=.env src/index.ts",
    "build": "echo 'Backend build - TypeScript to be configured'",
    "start": "node --experimental-strip-types --env-file=.env src/index.ts",
    "lint": "echo 'Backend lint - ESLint to be configured'",
    "typecheck": "echo 'Backend typecheck - TypeScript to be configured'",
    "test": "vitest run",
    "test:ci": "pnpm -s test:unit",
    "test:watch": "vitest",
    "test:ui": "vitest --ui",
    "test:coverage": "vitest run --coverage",
    "test:unit": "vitest run -t unit",
    "test:unit:fast": "vitest run -t unit --run --reporter=dot",
    "test:integration": "vitest run -t integration",
    "test:contract": "echo 'Backend contract tests - Pact to be configured'",
    "test:security": "echo 'Backend security tests - OWASP ZAP to be configured'",
    "test:bdd": "cucumber-js",
    "test:bdd:watch": "cucumber-js --watch",
    "test:bdd:report": "cucumber-js --format html:reports/cucumber-report.html",
    "db:generate": "prisma generate",
    "db:push": "prisma db push",
    "db:migrate": "prisma migrate dev",
    "db:studio": "prisma studio"
  },
  "devDependencies": {
    "@cucumber/cucumber": "^12.2.0",
    "@cucumber/pretty-formatter": "^2.4.1",
    "@testing-library/jest-dom": "^6.9.1",
    "@types/chai": "^5.2.3",
    "@types/compression": "^1.8.1",
    "@types/cors": "^2.8.19",
    "@types/express": "^5.0.5",
    "@types/morgan": "^1.9.10",
    "@types/multer": "^2.0.0",
    "@types/pg": "^8.15.6",
    "@types/supertest": "^6.0.3",
    "@types/swagger-jsdoc": "^6.0.4",
    "@types/swagger-ui-express": "^4.1.8",
    "@vitest/ui": "^4.0.12",
    "c8": "^10.1.3",
    "chai": "^6.2.1",
    "prisma": "^7.0.1",
    "supertest": "^7.1.4",
    "ts-node": "^10.9.2",
    "tsconfig-paths": "^4.2.0",
    "vitest": "^4.0.12"
  }
}
